{
  "name": "LeetCode-Tracker",
  "version": "1.0",
  "description": "Save Unsolved LeetCode Problems for Review",
  "permissions": [
    "activeTab", 
    "declarativeContent", 
    "storage",
    "http://localhost/*"
  ],
   "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup.html"
  },
  "manifest_version": 2
}
